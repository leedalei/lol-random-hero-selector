# 🚀 服务器配置文件
# 复制为 .env 并填入实际值

# 服务器连接信息
SERVER_HOST=your-server-ip
SERVER_USER=deploy
SERVER_DOMAIN=your-domain.com
DEPLOY_PATH=/var/www/lol-hero-selector

# SSH配置
SSH_PRIVATE_KEY=~/.ssh/id_rsa
SSH_PUBLIC_KEY=~/.ssh/id_rsa.pub

# 部署配置
NODE_ENV=production
BACKUP_ENABLED=true
HEALTH_CHECK_ENABLED=true

# 应用配置
APP_NAME=LOL随机英雄选择器
APP_DESCRIPTION=在线联机LOL随机英雄选择器

# 通知配置 (可选)
WEBHOOK_URL=
NOTIFICATION_EMAIL=

# 监控配置 (可选)
SENTRY_DSN=
LOG_LEVEL=info

# SSL配置 (可选)
SSL_ENABLED=false
SSL_EMAIL=
SSL_CERT_PATH=
SSL_KEY_PATH=